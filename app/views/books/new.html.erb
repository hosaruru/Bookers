

  <div class="box">
    <h1>Books</h1>
    <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    <!-- form_with部分 -->
    <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <div class="field">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
    	</div>
      <div class="field">
        <label for="book_title">Body</label><br>
          <%= f.text_area :body %>
    	</div>
  <%= f.submit '投稿' %>
<% end %>
</div>

